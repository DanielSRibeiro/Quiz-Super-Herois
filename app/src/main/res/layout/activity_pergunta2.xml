<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pergunta2Activity"
    android:orientation="vertical"
    android:background="@color/colorblue">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuário: "
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/textViewAnonimoP2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anônimo"
            android:textColor="#ffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="20sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Quais desses Super-Herois poderiam ganhar do Superman(Classico)?"
            android:textColor="#ffff"
            android:textSize="15sp"
            android:typeface="monospace" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="295dp"
            android:src="@drawable/superman"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBoxBatman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batman"
                    android:textColor="#ffff"
                    android:textColorHighlight="#ffff" />

                <CheckBox
                    android:id="@+id/checkBoxAquaman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aquaman"
                    android:textColor="#ffff"
                    android:textColorHint="#ffff" />

                <CheckBox
                    android:id="@+id/checkBoxDeedpool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deedpool"
                    android:textColor="#fff" />

                <CheckBox
                    android:id="@+id/checkBoxWolverine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wolverine"
                    android:textColor="#fff" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="90sp">

                <CheckBox
                    android:id="@+id/checkBoxFlash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flash"
                    android:textColor="#ffff"
                    android:textColorHighlight="#ffff" />

                <CheckBox
                    android:id="@+id/checkBoxCapital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capital america"
                    android:textColor="#fff" />

                <CheckBox
                    android:id="@+id/checkBoxThor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thor"
                    android:textColor="#fff" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avançar"
            android:id="@+id/buttonAvançarP2"/>
    </LinearLayout>


</LinearLayout>