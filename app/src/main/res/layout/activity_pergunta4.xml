<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pergunta2Activity"
    android:orientation="vertical"
    android:background="@drawable/thor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuário: "
            android:textColor="#ffff" />

        <TextView
            android:id="@+id/textViewAnonimoP4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anônimo"
            android:textColor="#ffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="20sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Quais foram os Herois que já levantaram o Mjölnir ?"
            android:textColor="#ffff"
            android:textSize="17sp"
            android:typeface="monospace" />

        <LinearLayout
            android:layout_marginTop="220sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <CheckBox
                    android:id="@+id/checkBoxCapitaoP4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capitão America"
                    android:textColor="#ffff"
                    android:textColorHighlight="#ffff" />

                <CheckBox
                    android:id="@+id/checkBoxThorP4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thor"
                    android:textColor="#ffff"
                    android:textColorHint="#ffff" />

                <CheckBox
                    android:id="@+id/checkBoxViuvaP4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Viuva-Negra"
                    android:textColor="#fff" />

                <CheckBox
                    android:id="@+id/checkBoxDeadpoolP4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deadpool"
                    android:textColor="#fff" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40sp">

                <CheckBox
                    android:id="@+id/checkBoxSupermanP4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Superman"
                    android:textColor="#ffff"
                    android:textColorHighlight="#ffff" />

                <CheckBox
                    android:id="@+id/checkBoxHomemP4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Homem de Ferro"
                    android:textColor="#fff" />

                <CheckBox
                    android:id="@+id/checkBoxWolverineP4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wolverine"
                    android:textColor="#fff" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_marginTop="80sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avançar"
            android:id="@+id/buttonAvancarP4"/>
    </LinearLayout>
</LinearLayout>